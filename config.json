{
    "aws": {
        "region": "ap-southeast-2",
        "tables": {
            "trades": "TradingBot_Trades",
            "logs": "TradingBot_Logs",
            "stats": "TradingBot_Stats",
            "prices": "TradingBot_Prices",
            "signals": "TradingBot_Signals",
            "positions": "TradingBot_Positions",
            "orders": "TradingBot_Orders"
        }
    },
    "exchange": {
        "id": "binance",
        "testnet": false,
        "options": {
            "defaultType": "spot",
            "adjustForTimeDifference": true
        }
    },
    "trading": {
        "symbols": [
            "BTC/USDT"
        ],
        "base_currency": "USDT",
        "risk_per_trade": 10.0,
        "interval": "1m",
        "active_strategies": {
            "MA_Crossover": {
                "enabled": true,
                "params": {
                    "short_period": 5,
                    "long_period": 20
                }
            }
        },
        "risk_management": {
            "max_positions": 1,
            "use_min_quantity": true,
            "order_ttl": 300,
            "max_slippage_pct": 0.5
        }
    }
}